<%= form_for(@appearance) do |f| %>

  <%= f.label :guest %>
  <%= f.collection_select(:guest_id, Guest.all, :id, :name) %> <br><br>

  <%= f.label :episode %>
  <%= f.collection_select(:episode_id, Episode.all, :id, :date) %> <br><br>

  <%= f.label :rating %>
  <%= f.select :rating, options_for_select(1..5) %> <br><br>

  <%= f.submit %>

<% end %>
